          "type": "controller",
          "endpoint": "music_service/plexamp",
          "method": "getPinAndUpdateField"
        },
        "visibleIf": {
          "field": "connected",
          "value": false
        }

      },
      {
        "id": "linkplex",
        "element": "button",
        "label": "TRANSLATE.LAUNCH_PLEX_PROMPT",
